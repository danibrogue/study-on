{% extends 'base.html.twig' %}

{% block title %}Изменить урок {{ lesson.title }} {% endblock %}

{% block body %}
    <div class="d-flex flex-column mx-3">
        <nav class="navbar navbar-expand-lg bg-light mb-2">
            <span class="navbar-brand h3 mx-3">StudyOn</span>
        </nav>

        <h3>Изменить урок</h3>

        {{ include('lesson/_form.html.twig', {'button_label': 'Сохранить'}) }}

        <div class="d-flex mt-3">
            {{ include('lesson/_delete_form.html.twig') }}
        </div>
    </div>
    <a class="btn btn-outline-secondary m-3" role="button" href="{{ path('app_course_show', {id: lesson.course.id}) }}">Вернуться к списку уроков</a>
{% endblock %}
