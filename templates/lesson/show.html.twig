{% extends 'base.html.twig' %}

{% block title %}{{ lesson.title }} / {{ lesson.course.title }} / StudyOn{% endblock %}

{% block body %}
    <div class="d-flex flex-column mx-3">
        <nav class="navbar navbar-expand-lg bg-light">
            <span class="navbar-brand h3 mx-3">StudyOn</span>
        </nav>

        <h3>{{ lesson.title }}</h3>
        <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.title }}</a>

        <nav class="navbar navbar-expand-lg">
            <ul class="navbar-nav">
                <li class="nav-item active mx-1">
                    <a class="btn btn-outline-secondary" role="button" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать урок</a>
                </li>
                <li class="nav-item active mx-1">
                    {{ include('lesson/_delete_form.html.twig') }}
                </li>
            </ul>
        </nav>

        <div class="d-flex">
            <p class="card-text p-2">{{lesson.contents}}</p>
        </div>
    </div>
{% endblock %}
