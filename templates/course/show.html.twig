{% extends 'base.html.twig' %}

{% block title %} {{ course.title }} {% endblock %}

{% block actions %}
    <div class="actions">
        <a href="{{ path('app_course_index') }}">Вернуться к списку курсов</a>
        <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
        {{ include('course/_delete_form.html.twig') }}
        <a href="{{ path('app_course_new_lesson') }}">Добавить урок</a>
    </div>
{% endblock %}

{% block body %}
    <div class="body_block">
        <p>{{ course.info }}</p>

        <ol class="lessons_list">
            {% for lesson in course.Includes %}
                <li class="list_node">
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{lesson.title}}</a>
                </li>
            {% endfor %}
        </ol>
    </div>
{% endblock %}
