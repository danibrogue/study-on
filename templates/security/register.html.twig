{% extends 'base.html.twig' %}

{% block title %} Регистрация {% endblock %}

{% block body %}
    <div class="d-flex flex-column mx-3">
        <h3>Регистрация</h3>

        {% if errors is defined %}
            <div class="alert alert-danger">
                <p class="m-0"> {{ errors }}</p>
            </div>
        {% endif %}

        {{ form_start(registrationForm) }}
        <div class="d-flex flex-column">
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}

            {% for password_field in registrationForm.password %}
                {{ form_label(password_field, null, { 'attr': {'class': 'form-label'} }) }}
                {{ form_widget(password_field, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(password_field) }}
            {% endfor %}
        </div>

        <div class="d-flex flex-row mt-2">
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox mx-2'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-outline-primary mt-2">Зарегистрироваться</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
