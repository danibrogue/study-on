<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="mx-3 mb-3">
            <nav class="d-flex justify-content-between navbar navbar-expand-lg bg-light">
                <div class="navbar-brand h3 mx-3">StudyOn</div>
                <ul class="nav nav-pills">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item"> <a type="button" class="btn btn-outline-info" href="{{ path('app_profile') }}">Профиль</a></li>
                        <li class="nav-item mx-3"> <a type="button" class="btn btn-outline-danger" href="{{ path('app_logout') }}">Выход</a></li>

                    {% else %}
                        <li class="nav-item"><a type="button" class="btn btn-outline-primary" href="{{ path('app_login') }}">Авторизация</a></li>
                        <li class="nav-item mx-3"><a type="button" class="btn btn-outline-info" href="{{ path('app_register') }}">Регистрация</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
